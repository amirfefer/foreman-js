{
  "name": "foreman-js",
  "version": "0.1.0",
  "description": "Foreman javascript packages",
  "license": "MIT",
  "repository": "https://github.com/theforeman/foreman-js",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "lerna": "lerna",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "build": "node --max_old_space_size=8192 ./node_modules/.bin/lerna run --stream build",
    "test": "lerna run --stream test",
    "lint": "lerna run --stream lint",
    "lint:commit": "commitlint -e",
    "lint:commit-travis": "commitlint-travis",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "publish:git-version": "npm run lerna -- version --conventional-commits --create-release github --yes",
    "publish:npm": "npm run lerna -- publish from-git --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/travis-cli": "^8.1.0",
    "commitlint-config-cz": "^0.12.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-patternfly-react": "^0.3.0",
    "lerna": "^3.14.1",
    "prettier": "^1.15.3"
  }
}
